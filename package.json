{
  "name": "node-caskdb",
  "version": "0.0.1",
  "description": "A Log-Structured Hash Table for Fast Key/Value Data",
  "type": "module",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "test": "vitest",
    "lint:check": "eslint \"{src,apps,libs,tests,bin}/**/*.{ts,mjs}\" --max-warnings 0",
    "format:check": "prettier --check \"{src,apps,libs,tests,bin}/**/*.{ts,mjs}\"",
    "format": "prettier --write \"{src,apps,libs,tests,bin}/**/*.{ts,mjs}\"",
    "lint": "eslint \"{src,apps,libs,tests,bin}/**/*.{ts,mjs}\" --fix --max-warnings 0"
  },
  "keywords": [
    "bitcask"
  ],
  "author": "JayJamieson",
  "license": "MIT",
  "repository": {
    "url": "git+https://github.com/JayJamieson/node-caskdb.git"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-promise": "^6.4.0",
    "globals": "^15.8.0",
    "prettier": "^3.3.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.0",
    "vitest": "^1.6.0"
  }
}
